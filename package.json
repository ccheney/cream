{
  "name": "cream",
  "version": "0.0.1",
  "license": "AGPL-3.0-only",
  "private": true,
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "CREAM_ENV=${CREAM_ENV:-PAPER} turbo run dev",
    "build": "turbo run build",
    "test": "NODE_ENV=test CREAM_ENV=BACKTEST turbo run test --filter='!./apps/dashboard'",
    "test:ts": "NODE_ENV=test CREAM_ENV=BACKTEST turbo run test --filter='!./apps/dashboard' --filter='!@cream/execution-engine' --filter='!@cream/research' --filter='!@cream/vision-service'",
    "test:rs": "CREAM_ENV=BACKTEST turbo run test --filter=@cream/execution-engine",
    "test:py": "CREAM_ENV=BACKTEST turbo run test --filter=@cream/research --filter=@cream/vision-service",
    "test:e2e": "CREAM_ENV=BACKTEST bun test ./**/tests/integration/*.test.ts --timeout 120000 && cd apps/dashboard && bun run test:e2e",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "bun run format:ts && bun run format:rust && bun run format:py",
    "format:ts": "biome format --write .",
    "format:rust": "cargo fmt --all",
    "format:py": "ruff format apps/vision-service packages/research",
    "lint": "bun run lint:ts && bun run lint:rust && bun run lint:py && bun run lint:deps",
    "lint:deps": "bun packages/config/src/bin/validate-deps.ts",
    "lint:ts": "biome check .",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:py": "ruff check apps/vision-service packages/research",
    "validate": "bun scripts/validate-versions.ts",
    "prepare": "husky",
    "db:seed": "CREAM_ENV=${CREAM_ENV:-BACKTEST} bun run packages/storage/src/seed-config.ts",
    "db:migrate": "CREAM_ENV=${CREAM_ENV:-BACKTEST} bun run packages/storage/src/run-migrations.ts",
    "db:status": "CREAM_ENV=${CREAM_ENV:-BACKTEST} bun run packages/storage/src/run-migrations.ts --status"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@typescript/native-preview": "7.0.0-dev.20260109.1",
    "husky": "9.1.7",
    "testcontainers": "11.11.0",
    "turbo": "2.7.3"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@tursodatabase/database": "0.4.2",
    "@tursodatabase/sync": "0.4.2",
    "lucide-react": "0.562.0",
    "react-hook-form": "7.70.0",
    "zod": "4.3.5"
  }
}
