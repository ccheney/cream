{
  "name": "cream",
  "version": "0.0.1",
  "license": "AGPL-3.0-only",
  "private": true,
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "CREAM_ENV=${CREAM_ENV:-BACKTEST} turbo run dev",
    "build": "turbo run build",
    "test": "CREAM_ENV=BACKTEST turbo run test",
    "test:integration": "CREAM_ENV=BACKTEST bun test --filter '**/integration/*.test.ts' --timeout 120000",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "bun run format:ts && bun run format:rust && bun run format:py",
    "format:ts": "biome format --write .",
    "format:rust": "cargo fmt --all",
    "format:py": "ruff format apps/filings-service apps/vision-service apps/evals packages/research",
    "lint": "bun run lint:ts && bun run lint:rust && bun run lint:py",
    "lint:ts": "biome check .",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:py": "ruff check apps/filings-service apps/vision-service apps/evals packages/research",
    "validate": "bun scripts/validate-versions.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@typescript/native-preview": "7.0.0-dev.20260106.1",
    "husky": "9.1.7",
    "testcontainers": "11.11.0",
    "turbo": "^2.7.2"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@tursodatabase/database": "0.3.2",
    "@tursodatabase/sync": "0.3.2",
    "lucide-react": "0.562.0",
    "react-hook-form": "7.70.0",
    "zod": "4.3.5"
  }
}
