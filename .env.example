# Cream Trading System - Environment Configuration
# Copy this file to .env and fill in your values.

# ===================
# Core
# ===================
CREAM_ENV=PAPER
NEXT_PUBLIC_CREAM_ENV=PAPER
OPERATOR_EMAIL=

# ===================
# Database (PostgreSQL)
# ===================
# Primary database URL (used by CREAM_ENV to select database)
DATABASE_URL=postgresql://cream:cream_dev_password@localhost:5432/cream

# Environment-specific overrides (optional)
DATABASE_URL_PAPER=postgresql://cream:cream_dev_password@localhost:5432/cream_paper
DATABASE_URL_LIVE=postgresql://cream:cream_dev_password@localhost:5432/cream

# PostgreSQL password (used by Docker)
POSTGRES_PASSWORD=cream_dev_password

# Test database for CI
TEST_DATABASE_URL=postgresql://cream:cream_dev_password@localhost:5432/cream_test

# HelixDB (Graph + Vector database)
HELIX_URL=http://localhost:6969

# ===================
# Broker (Alpaca)
# ===================
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_KEY=
ALPACA_SECRET=

# Enable position monitor for stop-loss enforcement
POSITION_MONITOR_ENABLED=true

# ===================
# Market Data
# ===================
# FRED - free at https://fred.stlouisfed.org
FRED_API_KEY=

# ===================
# LLM
# ===================
LLM_PROVIDER=google
LLM_MODEL_ID=gemini-3-flash-preview
GOOGLE_GENERATIVE_AI_API_KEY=
ANTHROPIC_API_KEY=

# ===================
# Authentication (OAuth)
# ===================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# Internal Services
# ===================
WORKER_INTERNAL_SECRET=
STREAM_PROXY_URL=http://localhost:50052
DASHBOARD_API_URL=http://localhost:3001

# ===================
# Mastra API
# ===================
# URL for the Mastra v1.0 API server (apps/mastra)
MASTRA_API_URL=http://localhost:4111

# ===================
# Prediction Markets
# ===================
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY_PATH=
# Polymarket: using public non-auth APIs, credentials not required
# POLYMARKET_API_KEY=
# POLYMARKET_SECRET=
# POLYMARKET_PASSPHRASE=

# ===================
# FINRA (Short Interest)
# ===================
FINRA_CLIENT_ID=
FINRA_CLIENT_SECRET=

# ===================
# Infrastructure (Hetzner)
# ===================
TF_VAR_hcloud_token=
HETZNER_API_TOKEN=

# ===================
# Hugging Face
# ===================
HF_TOKEN=

# ===================
# xAI
# ===================
XAI_MODEL=
XAI_API_KEY=

# ===================
# Observability (OpenObserve)
# ===================
# Enable/disable OpenTelemetry tracing (default: true)
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# ===================
# OpenObserve credentials
# ===================
# First run creates user, local UI: http://localhost:5080
ZO_ROOT_USER_EMAIL=
ZO_ROOT_USER_PASSWORD=
# Base64 encoded auth token: echo -n "email:password" | base64
ZO_AUTH_TOKEN=

# ===================
# Dashboard-API proxy settings
# ===================
OPENOBSERVE_URL=http://localhost:5080
OPENOBSERVE_USER=
OPENOBSERVE_PASSWORD=

# ===================
# Scheduler
# ===================
SCHEDULER_DISABLED=false

# ===================
# LogoKit (Company Logos)
# ===================
# Get API key at: https://logokit.com
LOGOKIT_API_KEY=
NEXT_PUBLIC_LOGOKIT_API_KEY=

# ===================
# Semantic Scholar
# ===================
# Get API key at: https://www.semanticscholar.org/product/api
# With key: 1 req/sec, Without: shared pool (rate limited frequently)
SEMANTIC_SCHOLAR_API_KEY=
