{
  "name": "@cream/dashboard-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "PORT=3001 bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@cream/api": "workspace:*",
    "@cream/config": "workspace:*",
    "@cream/dashboard-types": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/marketdata": "workspace:*",
    "@cream/metrics": "workspace:*",
    "@cream/storage": "workspace:*",
    "@hono/zod-openapi": "^0.19.0",
    "hono": "^4.7.0",
    "zod": "^4.0.0-beta.20"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "^1.2.0",
    "@typescript/native-preview": "7.0.0-dev.20260106.1"
  }
}
