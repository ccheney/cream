{
  "name": "@cream/api",
  "version": "0.1.0",
  "description": "Mastra server for agents, workflows, and HTTP endpoints",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "test": "CREAM_ENV=BACKTEST bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@cream/config": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/marketdata": "workspace:*",
    "@cream/universe": "workspace:*",
    "@mastra/core": "^0.24.0",
    "zod": "^3.25.11"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@typescript/native-preview": "7.0.0-dev.20260104.1"
  }
}
