{
	"name": "@cream/mastra",
	"version": "0.1.0",
	"private": true,
	"description": "Mastra v1 server with trading agents and workflows",
	"type": "module",
	"main": "dist/index.js",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"bun": "./src/index.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "bun run --preload ./src/instrumentation.ts src/server.ts",
		"dev:mastra": "bunx --bun mastra dev",
		"dev:hono": "bun run --preload ./src/instrumentation.ts src/server.ts",
		"build": "bun build src/index.ts --outdir dist --target bun --external pg --external pg-native --external @cream/schema-gen/*",
		"start": "bun run --preload ./src/instrumentation.ts src/server.ts",
		"typecheck": "tsgo --noEmit",
		"test": "bun test",
		"lint": "biome check --fix src/",
		"format": "biome format --write src/"
	},
	"dependencies": {
		"@ai-sdk/google": "3.0.13",
		"@ai-sdk/provider": "3.0.5",
		"@ai-sdk/xai": "3.0.33",
		"@bufbuild/protobuf": "2.11.0",
		"@connectrpc/connect": "2.1.1",
		"@connectrpc/connect-node": "2.1.1",
		"@cream/agents": "workspace:*",
		"@cream/broker": "workspace:*",
		"@cream/config": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/external-context": "workspace:*",
		"@cream/helix": "workspace:*",
		"@cream/helix-schema": "workspace:*",
		"@cream/indicators": "workspace:*",
		"@cream/logger": "workspace:*",
		"@cream/marketdata": "workspace:*",
		"@cream/prediction-markets": "workspace:*",
		"@cream/regime": "workspace:*",
		"@cream/schema-gen": "workspace:*",
		"@cream/storage": "workspace:*",
		"@cream/universe": "workspace:*",
		"@hono/node-server": "1.19.9",
		"@mastra/core": "1.0.4",
		"@mastra/hono": "1.0.1",
		"@mastra/observability": "1.0.0",
		"@mastra/otel-bridge": "1.0.0",
		"@mastra/otel-exporter": "1.0.0",
		"@mastra/pg": "1.0.0",
		"@opentelemetry/api": "1.9.0",
		"@opentelemetry/auto-instrumentations-node": "0.69.0",
		"@opentelemetry/core": "2.5.0",
		"@opentelemetry/exporter-trace-otlp-http": "0.211.0",
		"@opentelemetry/exporter-trace-otlp-proto": "0.211.0",
		"@opentelemetry/sdk-node": "0.211.0",
		"@opentelemetry/sdk-trace-node": "2.5.0",
		"ai": "6.0.48",
		"drizzle-orm": "^0.45.1",
		"hono": "4.11.5",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.7",
		"@typescript/native-preview": "7.0.0-dev.20260122.4",
		"mastra": "1.0.1",
		"tsx": "4.21.0"
	}
}
