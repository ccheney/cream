# Mastra v1 Server - Environment Configuration
# Copy this file to .env and fill in your values.

# ===================
# Server
# ===================
# Port for Mastra API server
PORT=4111

# ===================
# Core
# ===================
CREAM_ENV=PAPER

# ===================
# Database
# ===================
DATABASE_URL=postgresql://cream:cream_dev_password@localhost:5432/cream
HELIX_URL=http://localhost:6969

# ===================
# LLM Providers
# ===================
# Google AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=

# xAI (Grok) - for grounding agent
XAI_API_KEY=
XAI_MODEL=grok-3

# Anthropic (Claude) - optional
ANTHROPIC_API_KEY=

# ===================
# Broker (Alpaca)
# ===================
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_KEY=
ALPACA_SECRET=

# ===================
# Market Data
# ===================
FRED_API_KEY=
STREAM_PROXY_URL=http://localhost:50052

# ===================
# Prediction Markets
# ===================
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY_PATH=

# ===================
# External APIs
# ===================
SEMANTIC_SCHOLAR_API_KEY=

# ===================
# Observability (OpenTelemetry)
# ===================
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
