{
	"name": "@cream/worker",
	"version": "0.1.0",
	"private": true,
	"description": "Hourly scheduler triggering trading cycle workflow",
	"type": "module",
	"scripts": {
		"dev": "bun run --env-file=../../.env --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"start": "bun run dist/index.js",
		"typecheck": "tsgo --noEmit",
		"test": "bun test",
		"lint": "biome check src/",
		"format": "biome format --write src/"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "0.2.31",
		"@cream/agents": "workspace:*",
		"@cream/config": "workspace:*",
		"@cream/mastra": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/filings": "workspace:*",
		"@cream/helix": "workspace:*",
		"@cream/indicators": "workspace:*",
		"@cream/logger": "workspace:*",
		"@cream/storage": "workspace:*",
		"@mastra/core": "1.1.0",
		"@opentelemetry/api": "1.9.0",
		"@opentelemetry/auto-instrumentations-node": "0.69.0",
		"@opentelemetry/core": "2.5.0",
		"@opentelemetry/exporter-trace-otlp-proto": "0.211.0",
		"@opentelemetry/sdk-node": "0.211.0",
		"@opentelemetry/sdk-trace-base": "2.5.0",
		"croner": "10.0.1",
		"drizzle-orm": "0.45.1",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.8",
		"@typescript/native-preview": "7.0.0-dev.20260203.1"
	}
}
