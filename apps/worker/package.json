{
  "name": "@cream/worker",
  "version": "0.1.0",
  "private": true,
  "description": "Hourly scheduler triggering trading cycle workflow",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsgo --noEmit",
    "test": "bun test",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@cream/agents": "workspace:*",
    "@cream/api": "workspace:*",
    "@cream/config": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/filings": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/indicators": "workspace:*",
    "@cream/logger": "workspace:*",
    "@cream/storage": "workspace:*",
    "@mastra/core": "1.0.0-beta.21",
    "croner": "9.1.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "1.3.6",
    "@typescript/native-preview": "7.0.0-dev.20260115.1"
  }
}
