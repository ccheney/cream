{
  "name": "@cream/validation",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./parity": {
      "types": "./src/parity.ts",
      "import": "./src/parity.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "test": "CREAM_ENV=BACKTEST bun test",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@typescript/native-preview": "7.0.0-dev.20260104.1"
  }
}
