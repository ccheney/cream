{
  "name": "@cream/helix",
  "version": "0.1.0",
  "description": "HelixDB integration for Cream trading system",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "CREAM_ENV=BACKTEST bun test",
    "test:integration": "CREAM_ENV=BACKTEST bun test tests/integration",
    "typecheck": "tsgo --noEmit",
    "lint": "biome check src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "dependencies": {
    "@cream/domain": "workspace:*",
    "@cream/config": "workspace:*",
    "@cream/helix-schema": "workspace:*",
    "helix-ts": "1.0.8"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "1.3.6",
    "testcontainers": "11.11.0",
    "@typescript/native-preview": "7.0.0-dev.20260115.1"
  }
}
