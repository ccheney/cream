{
	"name": "@cream/logger",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"typecheck": "tsgo --noEmit",
		"test": "echo 'No tests for logger package'",
		"lint": "biome check src/",
		"format": "biome format --write src/",
		"clean": "rm -rf dist coverage"
	},
	"dependencies": {
		"pino": "10.3.0",
		"pino-pretty": "13.1.3"
	},
	"devDependencies": {
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.8",
		"@typescript/native-preview": "7.0.0-dev.20260203.1"
	}
}
