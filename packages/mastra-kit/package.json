{
  "name": "@cream/mastra-kit",
  "version": "0.1.0",
  "description": "Agent prompts, tools, and evaluation utilities for Cream trading system",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "test": "CREAM_ENV=BACKTEST bun test",
    "test:evals": "CREAM_ENV=BACKTEST bun test tests/evals",
    "evals:agents": "bun run tests/evals/run-evals.ts",
    "evals:semantic": "bun run tests/evals/semantic.ts",
    "evals:compare": "bun run tests/evals/compare.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cream/domain": "workspace:*",
    "@cream/config": "workspace:*",
    "@mastra/core": "^0.18.0",
    "@langsmith/sdk": "^0.3.0",
    "braintrust": "^0.0.180",
    "autoevals": "^0.0.90",
    "promptfoo": "^0.100.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
