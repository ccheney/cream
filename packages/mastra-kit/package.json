{
  "name": "@cream/mastra-kit",
  "version": "0.1.0",
  "description": "Agent prompts, tools, and evaluation utilities for Cream trading system",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "test": "CREAM_ENV=BACKTEST bun test",
    "test:evals": "CREAM_ENV=BACKTEST bun test tests/evals",
    "evals:agents": "bun run tests/evals/run-evals.ts",
    "evals:semantic": "bun run tests/evals/semantic.ts",
    "evals:compare": "bun run tests/evals/compare.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "dependencies": {
    "@cream/broker": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/config": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/indicators": "workspace:*",
    "@cream/universe": "workspace:*",
    "@mastra/core": "^0.24.9",
    "langsmith": "^0.4.4",
    "braintrust": "^1.1.1",
    "autoevals": "^0.0.131",
    "promptfoo": "^0.120.8"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@typescript/native-preview": "7.0.0-dev.20260106.1"
  }
}
