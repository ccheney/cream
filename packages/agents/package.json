{
  "name": "@cream/agents",
  "version": "0.1.0",
  "description": "Agent prompts and tools for Cream trading system",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --external @cream/schema-gen/*",
    "test": "CREAM_ENV=BACKTEST bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
    "@cream/broker": "workspace:*",
    "@cream/external-context": "workspace:*",
    "@cream/config": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/helix-schema": "workspace:*",
    "@cream/indicators": "workspace:*",
    "@cream/logger": "workspace:*",
    "@cream/storage": "workspace:*",
    "@cream/universe": "workspace:*",
    "@google/genai": "1.35.0",
    "@mastra/core": "1.0.0-beta.21",
    "@mastra/mcp": "1.0.0-beta.9"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "1.3.5",
    "@typescript/native-preview": "7.0.0-dev.20260109.1"
  },
  "optionalDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.2"
  }
}
