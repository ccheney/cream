{
	"name": "@cream/agents",
	"version": "0.1.0",
	"description": "Agent prompts and tools for Cream trading system",
	"type": "module",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./implementations": {
			"types": "./src/tools/implementations/index.ts",
			"import": "./src/tools/implementations/index.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target bun --external @cream/schema-gen/*",
		"test": "bun test",
		"typecheck": "tsgo --noEmit",
		"lint": "biome check src/",
		"format": "biome format --write src/"
	},
	"dependencies": {
		"@bufbuild/protobuf": "2.11.0",
		"@cream/broker": "workspace:*",
		"@cream/config": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/external-context": "workspace:*",
		"@cream/helix": "workspace:*",
		"@cream/helix-schema": "workspace:*",
		"@cream/indicators": "workspace:*",
		"@cream/logger": "workspace:*",
		"@cream/marketdata": "workspace:*",
		"@cream/schema-gen": "workspace:*",
		"@cream/storage": "workspace:*",
		"@cream/universe": "workspace:*",
		"@google/genai": "1.38.0"
	},
	"devDependencies": {
		"@cream/test-utils": "workspace:*",
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.7",
		"@typescript/native-preview": "7.0.0-dev.20260122.4"
	},
	"optionalDependencies": {
		"@anthropic-ai/claude-agent-sdk": "0.2.17"
	}
}
