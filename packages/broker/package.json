{
	"name": "@cream/broker",
	"version": "0.1.0",
	"description": "Broker integration for Cream trading system (Alpaca Markets)",
	"type": "module",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist",
		"test": "bun test",
		"test:paper": "CREAM_ENV=PAPER bun test tests/paper",
		"typecheck": "tsgo --noEmit",
		"lint": "biome check src/ tests/",
		"format": "biome format --write src/ tests/"
	},
	"dependencies": {
		"@cream/config": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/logger": "workspace:*"
	},
	"devDependencies": {
		"@cream/test-utils": "workspace:*",
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.6",
		"@typescript/native-preview": "7.0.0-dev.20260122.4"
	}
}
