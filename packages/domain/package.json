{
  "name": "@cream/domain",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "import": "./src/env.ts"
    },
    "./websocket": {
      "types": "./src/websocket/index.ts",
      "import": "./src/websocket/index.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "test": "CREAM_ENV=BACKTEST bun test",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
