{
  "name": "@cream/domain",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "import": "./src/env.ts"
    },
    "./schemas": {
      "types": "./src/schemas/index.ts",
      "import": "./src/schemas/index.ts"
    },
    "./time": {
      "types": "./src/time.ts",
      "import": "./src/time.ts"
    },
    "./websocket": {
      "types": "./src/websocket/index.ts",
      "import": "./src/websocket/index.ts"
    },
    "./grpc": {
      "types": "./src/grpc/index.ts",
      "import": "./src/grpc/index.ts"
    },
    "./arrow": {
      "types": "./src/arrow/index.ts",
      "import": "./src/arrow/index.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "test": "CREAM_ENV=BACKTEST bun test",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
    "@connectrpc/connect": "^2.1.1",
    "@connectrpc/connect-node": "^2.1.1",
    "@cream/schema-gen": "workspace:*",
    "apache-arrow": "21.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@typescript/native-preview": "7.0.0-dev.20260106.1"
  }
}
