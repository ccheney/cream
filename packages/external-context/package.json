{
  "name": "@cream/external-context",
  "version": "0.1.0",
  "description": "External context extraction pipeline for news, sentiment, and fundamentals",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "test": "bun test",
    "typecheck": "tsgo --noEmit",
    "lint": "biome check src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "dependencies": {
    "@cream/config": "workspace:*",
    "@cream/domain": "workspace:*",
    "@cream/helix": "workspace:*",
    "@cream/logger": "workspace:*",
    "@cream/universe": "workspace:*",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@cream/tsconfig": "workspace:*",
    "@types/bun": "1.3.6",
    "@typescript/native-preview": "7.0.0-dev.20260115.1"
  }
}
