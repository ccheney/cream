{
	"name": "@cream/storage",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./schema": {
			"types": "./src/schema/index.ts",
			"import": "./src/schema/index.ts"
		},
		"./schema/auth": {
			"types": "./src/schema/auth.ts",
			"import": "./src/schema/auth.ts"
		},
		"./db": {
			"types": "./src/db.ts",
			"import": "./src/db.ts"
		}
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"dev": "bun --bun x drizzle-kit studio",
		"typecheck": "tsgo --noEmit",
		"test": "bun test",
		"lint": "biome check src/",
		"format": "biome format --write src/",
		"clean": "rm -rf dist coverage",
		"db:push": "bun --bun x drizzle-kit push",
		"db:reset": "bun run scripts/db-reset.ts",
		"db:seed": "bun run src/seed.ts"
	},
	"dependencies": {
		"@cream/config": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/logger": "workspace:*",
		"drizzle-orm": "0.45.1",
		"drizzle-zod": "0.8.3",
		"pg": "8.18.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.9",
		"@types/pg": "8.16.0",
		"@typescript/native-preview": "7.0.0-dev.20260210.1",
		"drizzle-kit": "0.31.9"
	}
}
