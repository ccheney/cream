{
	"name": "@cream/universe",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"typecheck": "tsgo --noEmit",
		"test": "bun test",
		"lint": "biome check src/",
		"format": "biome format --write src/",
		"clean": "rm -rf dist coverage"
	},
	"dependencies": {
		"@cream/config": "workspace:*",
		"@cream/domain": "workspace:*",
		"@cream/logger": "workspace:*",
		"@cream/storage": "workspace:*",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@cream/tsconfig": "workspace:*",
		"@types/bun": "1.3.9",
		"@typescript/native-preview": "7.0.0-dev.20260210.1"
	}
}
