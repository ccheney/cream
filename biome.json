{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "warn",
        "noUnusedFunctionParameters": "warn"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn",
        "useImportType": "error",
        "useExportType": "error",
        "noInferrableTypes": "error",
        "noNamespace": "error",
        "useBlockStatements": "error",
        "noParameterAssign": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "warn",
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noShadowRestrictedNames": "warn",
        "useIterableCallbackReturn": "warn"
      },
      "complexity": {
        "noForEach": "warn",
        "useLiteralKeys": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": {
        "useKeyWithMouseEvents": "warn",
        "useSemanticElements": "warn",
        "useButtonType": "warn",
        "noSvgWithoutTitle": "warn",
        "useFocusableInteractive": "warn",
        "noLabelWithoutControl": "warn",
        "useAriaPropsSupportedByRole": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "globals": [
      "Bun",
      "process",
      "console",
      "describe",
      "test",
      "it",
      "expect",
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "jest",
      "vi"
    ],
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "includes": [
      "apps/**/*.ts",
      "apps/**/*.tsx",
      "apps/**/*.js",
      "apps/**/*.jsx",
      "packages/**/*.ts",
      "packages/**/*.tsx",
      "packages/**/*.js",
      "packages/**/*.jsx"
    ]
  },
  "overrides": [
    {
      "includes": ["apps/dashboard/**/*.tsx", "apps/dashboard/**/*.ts"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "warn"
          },
          "a11y": {
            "useSemanticElements": "warn",
            "useButtonType": "warn",
            "useKeyWithMouseEvents": "warn",
            "noSvgWithoutTitle": "warn",
            "useFocusableInteractive": "warn",
            "noLabelWithoutControl": "warn",
            "useAriaPropsSupportedByRole": "warn"
          },
          "suspicious": {
            "noArrayIndexKey": "warn",
            "noAssignInExpressions": "warn"
          },
          "correctness": {
            "noUnusedFunctionParameters": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx", "**/tests/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    }
  ]
}
