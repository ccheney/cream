{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "stream",
	"globalDependencies": ["bun.lock", "biome.json", "packages/tsconfig/*.json"],
	"globalEnv": ["NODE_ENV", "CREAM_ENV"],
	"tasks": {
		"transit": {
			"dependsOn": ["^transit"]
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig.json", "$TURBO_ROOT$/.env"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "target/**"],
			"env": ["CREAM_ENV"]
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"**/*.test.ts",
				"**/*.test.tsx",
				"tests/**",
				"$TURBO_ROOT$/.env"
			],
			"outputs": [],
			"outputLogs": "errors-only",
			"env": ["CREAM_ENV", "LLM_MODEL_ID"],
			"passThroughEnv": ["CLAUDECODE", "NODE_ENV", "CREAM_ENV", "LLM_*", "ALPACA_*", "KALSHI_*"]
		},
		"lint": {
			"dependsOn": ["transit"],
			"inputs": ["$TURBO_DEFAULT$", "biome.json", "tsconfig.json"],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
			"outputs": ["**/*.tsbuildinfo"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"passThroughEnv": [
				"CREAM_ENV",
				"NODE_ENV",
				"LOG_LEVEL",
				"DATABASE_URL*",
				"TEST_DATABASE_URL",
				"HELIX_*",
				"ALPACA_*",
				"FRED_API_KEY",
				"ANTHROPIC_API_KEY",
				"GOOGLE_*",
				"LLM_*",
				"BETTER_AUTH_URL",
				"KALSHI_*",
				"POLYMARKET_*",
				"FINRA_*",
				"ALLOWED_ORIGINS",
				"DASHBOARD_API_URL",
				"WORKER_INTERNAL_SECRET",
				"OTEL_*",
				"ZO_*",
				"XAI_*"
			]
		},
		"clean": {
			"cache": false,
			"outputs": []
		},
		"format": {
			"cache": false,
			"outputs": []
		}
	}
}
