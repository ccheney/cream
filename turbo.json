{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["CREAM_ENV"]
    },
    "test": {
      "dependsOn": ["^build", "build"],
      "outputs": [],
      "env": ["CREAM_ENV", "LLM_MODEL_ID"],
      "passThroughEnv": [
        "CREAM_ENV",
        "LLM_MODEL_ID",
        "ALPACA_KEY",
        "ALPACA_SECRET",
        "KALSHI_API_KEY_ID",
        "KALSHI_PRIVATE_KEY_PATH"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "CREAM_ENV",
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN",
        "HELIX_URL",
        "HELIX_HOST",
        "HELIX_PORT",
        "ALPACA_KEY",
        "ALPACA_SECRET",
        "ALPACA_BASE_URL",
        "FMP_KEY",
        "ALPHAVANTAGE_KEY",
        "ANTHROPIC_API_KEY",
        "GOOGLE_GENERATIVE_AI_API_KEY",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "BETTER_AUTH_URL",
        "KALSHI_API_KEY_ID",
        "KALSHI_PRIVATE_KEY_PATH",
        "ALLOWED_ORIGINS",
        "NODE_ENV",
        "LOG_LEVEL"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    }
  }
}
