{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["CREAM_ENV"]
    },
    "test": {
      "dependsOn": ["^build", "build"],
      "outputs": ["coverage/**"],
      "env": ["CREAM_ENV"],
      "passThroughEnv": ["CREAM_ENV"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["CREAM_ENV", "TURSO_DATABASE_URL", "TURSO_AUTH_TOKEN", "HELIX_URL", "ALPACA_KEY", "ALPACA_SECRET", "POLYGON_KEY", "ANTHROPIC_API_KEY", "GOOGLE_API_KEY"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    }
  }
}
